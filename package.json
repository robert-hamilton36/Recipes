{
  "name": "typescript-react-express-boilerplate",
  "version": "1.0.0",
  "description": "react boilerplate using typescript",
  "main": "server/index.js",
  "scripts": {
    "dev": "run-p dev:client dev:server",
    "dev:client": "npm run webpack -- --watch",
    "dev:server": "nodemon --exec ts-node server/index.ts",
    "knex": "knex --knexfile ./server/db/knexfile.js",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "test": "jest",
    "webpack": "webpack --config ./client/webpack.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robert-hamilton36/Typescript-React-Express-Boilerplate.git"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "jest": {
    "setupFiles": [
      "./client/testing/setup/jsdom.js"
    ]
  },
  "author": "Me",
  "license": "ISC",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "extends": [
      "eda",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "bundle.js"
    ],
    "rules": {
      "no-use-before-define": "off",
      "@typescript-eslint/no-use-before-define": [
        "error"
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx",
            ".d.ts"
          ]
        }
      }
    }
  },
  "dependencies": {
    "express": "^4.17.3",
    "knex": "^2.0.0",
    "pg": "^8.7.3",
    "superagent": "^7.1.2",
    "ts-node": "^10.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/register": "^7.17.7",
    "@testing-library/react": "^13.1.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.25",
    "@types/react": "^18.0.6",
    "@types/react-dom": "^18.0.2",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "babel-loader": "^8.2.5",
    "eslint": "^8.14.0",
    "eslint-config-eda": "^1.1.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^27.5.1",
    "jsdom": "^19.0.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-router-dom": "^6.3.0",
    "sqlite3": "^5.0.5",
    "supertest": "^6.2.2",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  }
}
